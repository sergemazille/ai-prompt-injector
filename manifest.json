{
  "manifest_version": 3,
  "name": "Prompt Library",
  "version": "1.0.1",
  "description": "Manage and insert prompts into AI chat interfaces",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://bard.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://www.perplexity.ai/*",
    "https://poe.com/*",
    "https://deepseek.com/*",
    "https://chat.deepseek.com/*",
    "https://kimi.moonshot.cn/*",
    "https://chatglm.cn/*",
    "https://chatglm.com/*",
    "https://qwen.chat/*",
    "https://chat.qwen.com/*",
    "https://yiyan.baidu.com/*",
    "https://tongyi.aliyun.com/*",
    "https://chat.anthropic.com/*",
    "https://chat.you.com/*",
    "https://huggingface.co/chat/*",
    "https://chat.character.ai/*",
    "https://chat.forefront.ai/*",
    "https://chat.mistral.ai/*",
    "https://grok.x.ai/*",
    "https://chat.lmsys.org/*",
    "https://dust.tt/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup.html",
    "default_title": "Prompt Library"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://www.perplexity.ai/*",
        "https://poe.com/*",
        "https://deepseek.com/*",
        "https://chat.deepseek.com/*",
        "https://kimi.moonshot.cn/*",
        "https://chatglm.cn/*",
        "https://chatglm.com/*",
        "https://qwen.chat/*",
        "https://chat.qwen.com/*",
        "https://yiyan.baidu.com/*",
        "https://tongyi.aliyun.com/*",
        "https://chat.anthropic.com/*",
        "https://chat.you.com/*",
        "https://huggingface.co/chat/*",
        "https://chat.character.ai/*",
        "https://chat.forefront.ai/*",
        "https://chat.mistral.ai/*",
        "https://grok.x.ai/*",
        "https://chat.lmsys.org/*",
        "https://dust.tt/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "myprompts@example.com",
      "strict_min_version": "128.0"
    }
  }
}